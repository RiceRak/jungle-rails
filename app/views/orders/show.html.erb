<section class="orders-show">
<div class="order-summary jumbotron">
  <h4>Thank you, your order has been processed. The order details have been sent to:  <%= @order.email %></h4>
</div>
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |line_item| %>
        <%= render partial: "line_item", locals: { line_item: line_item } %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">TOTAL:</th>
        <th><%= humanized_money_with_symbol @order.total_cents / 100.0 %></th>
      </tr>
    </tfoot>
  </table>



  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>